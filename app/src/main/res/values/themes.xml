<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal tech-enterprise -->
    <style name="Theme.AlmexAsistente" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryVariant">@color/background_secondary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- NavegaciÃ³n -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
        
        <!-- Texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
</resources>