<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/background_secondary"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_document_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_pdf"
            app:tint="@color/accent_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_document_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título del documento"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/roboto_mono_bold"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_document_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vista previa del contenido del documento..."
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_mono_regular"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_document_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF • 250 palabras • 1.2 MB"
                android:textSize="10sp"
                android:textColor="@color/text_tertiary"
                android:fontFamily="@font/roboto_mono_regular"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_document_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/02/2026 14:30"
                android:textSize="10sp"
                android:textColor="@color/accent_blue"
                android:fontFamily="@font/roboto_mono_regular" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete_document"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_tech"
            android:src="@drawable/ic_delete"
            android:contentDescription="Eliminar documento"
            app:tint="@color/status_error" />

    </LinearLayout>

</androidx.cardview.widget.CardView>