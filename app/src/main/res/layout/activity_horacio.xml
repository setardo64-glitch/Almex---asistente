<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.HoracioActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_secondary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_secondary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="HORACIO"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Selector de días -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_secondary"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DÍAS DE LA SEMANA"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_mono_bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <Button
                    android:id="@+id/btn_monday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="L" />

                <Button
                    android:id="@+id/btn_tuesday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="M" />

                <Button
                    android:id="@+id/btn_wednesday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="X" />

                <Button
                    android:id="@+id/btn_thursday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="J" />

                <Button
                    android:id="@+id/btn_friday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="V" />

                <Button
                    android:id="@+id/btn_saturday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="S" />

                <Button
                    android:id="@+id/btn_sunday"
                    style="@style/DayButtonStyle"
                    android:layout_weight="1"
                    android:text="D" />

            </LinearLayout>

        </LinearLayout>

        <!-- Lista de horarios -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_schedules"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_schedule" />

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No hay acciones programadas\npara este día"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_mono_regular"
                android:gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/accent_blue"
        app:tint="@color/text_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>