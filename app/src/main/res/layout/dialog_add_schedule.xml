<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_secondary">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/text_secondary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_action_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la acciÃ³n"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:fontFamily="@font/roboto_mono_regular" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/text_secondary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_objective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Objetivo (opcional)"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:fontFamily="@font/roboto_mono_regular" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_start_time"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Hora Inicio"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/roboto_mono_regular"
            android:background="@drawable/button_tech" />

        <Button
            android:id="@+id/btn_end_time"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Hora Fin"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/roboto_mono_regular"
            android:background="@drawable/button_tech" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIPO DE RECORDATORIO"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/roboto_mono_bold"
        android:letterSpacing="0.1"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_reminder_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_tech"
        android:layout_marginBottom="16dp" />

</LinearLayout>