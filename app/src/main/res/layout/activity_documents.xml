<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.DocumentsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_secondary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_secondary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="ðŸ“„ DOCUMENTACIÃ“N"
            app:titleTextColor="@color/text_primary" />

        <!-- Barra de bÃºsqueda -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/search_background"
            app:iconifiedByDefault="false"
            app:queryHint="Buscar documentos..." />

        <!-- Filtros por tipo -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todos"
                    android:checked="true"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_docx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Word"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Texto"
                    style="@style/Widget.MaterialComponents.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- InformaciÃ³n de almacenamiento -->
        <TextView
            android:id="@+id/storage_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Documentos: 0 | Espacio: 0 MB"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/roboto_mono_regular"
            android:background="@color/background_secondary"
            android:gravity="center" />

        <!-- Lista de documentos -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_documents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_document" />

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No hay documentos creados\n\nToca + para crear tu primer documento"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_mono_regular"
                android:gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/accent_blue"
        app:tint="@color/text_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>